<Window
     x:Name="mainWindow"
    x:Class="stringsDemoProgram.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:stringsDemoProgram"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <TextBox x:Name="txtFirstName" TextWrapping="Wrap" Text="TextBox" Foreground="#FFE61414" FontSize="48"/>
        <Button x:Name="btnSetName"
                Click="btnSetName_Click"  Content="Set Name" FontSize="48" Height="71" Background="#FF0C37F9" Foreground="White"/>

    </StackPanel>
</Window>
